{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build_runner watch",
			"detail": "Code generation (continuous)",
			"type": "flutter",
			"command": "flutter",
			"args": [
				"pub",
				"run",
				"build_runner",
				"watch",
				"--delete-conflicting-outputs"
			],
			"problemMatcher": [
				"$dart-build_runner"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "dedicated"
			}
		},
	]
}